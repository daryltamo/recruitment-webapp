# Environment variables for recruitment webapp
# Copy this file to .env and modify the values as needed

# Application Configuration
NODE_ENV=development
PORT=3000
SECRET_KEY=your_secret_key
JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_session_secret_here_change_in_production

# Database Configuration
DB_HOST=recruitment_db
DB_PORT=5432
DB_NAME=recruitment_webapp
DB_USER=recruitment_user
DB_PASSWORD=secure_password_123

# Alternative: Full database URL (uncomment if preferred over individual DB vars)
# DATABASE_URL=postgres://recruitment_user:secure_password_123@localhost:5432/recruitment_webapp

# pgAdmin Configuration (for local development)
PGADMIN_PASSWORD=admin_password_123

# File Upload Configuration
UPLOAD_DIR=./uploads
UPLOADS_PATH=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration
EMAIL_SERVICE=your_email_service
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
SMTP_HOST=your.smtp.server
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@recruitment-app.com